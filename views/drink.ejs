<div class="container">
  <h1 class="mt-4">Drink Customization</h1>
  <div class="row">
    <div class="col-md-6">
      <h2>Strength</h2>
      <label for="slider">Strength Ranges From 1-5</label>
      <input type="range" class="custom-range" id="slider" min="1" max="5" />
      <span id="slider_value"></span>
      <div>
        <span class="cup" style="background-color: rgb(175, 175, 175)"></span>
        <span
          class="handle"
          style="background-color: rgb(175, 175, 175)"
        ></span>
        <span class="dot" style="background-color: rgb(58, 33, 16)" id="dot"></span>
      </div>
    </div>
    <div class="col-md-6">
      <h2>Description</h2>
      <div class="form-group">
        <label for="customRange1">A Description of your Drink</label>
        <textarea class="form-control" name="" id="" rows="12"></textarea>
      </div>
      <div class="mt-5">
        <button class="btn btn-primary profile-button" type="button">
          Submit Drink
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    var strength = 3;
    $(document).on("input", "#slider", function () {
      $("#slider_value").html($(this).val());
      strength = $("#slider").val();
      if (strength == "1") {
        $("#dot").css("background-color"," rgb(100, 61, 36)")
      } else if (strength == "2") {
        $("#dot").css("background-color"," rgb(83, 47, 25)")
      } else if (strength == "3") {
        $("#dot").css("background-color","rgb(58, 33, 16)")
      } else if (strength == "4") {
        $("#dot").css("background-color"," rgb(43, 20, 4)")
      } else if (strength == "5") {
        $("#dot").css("background-color","#000")
      } else {
          strength = 3;
          $("#dot").css("background-color","rgb(58, 33, 16)")
      }
      console.log(strength);
    });
  });
</script>
